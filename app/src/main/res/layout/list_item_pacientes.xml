<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/imagem_item"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/icon_usuario_redondo"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_margin="4dp"
            />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNomePacienteLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Eduardo H P Pooch"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:paddingLeft="10dp"
                >

                <TextView
                    android:id="@+id/textNumeroTestesLista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:paddingRight="5dp"
                    />

                <TextView
                    android:id="@+id/textTestesPluralLista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="testes"
                    android:paddingRight="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|" />

                <TextView
                    android:id="@+id/textIdadeLista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18"
                    android:paddingLeft="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" anos"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>