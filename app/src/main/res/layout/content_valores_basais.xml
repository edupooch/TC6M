<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corPrimaria"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.edu.ufcspa.tc6m.controle.ValoresBasaisActivity"
    tools:showIn="@layout/activity_valores_basais">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_edge"
        android:gravity="center">

        <TextView
            android:id="@+id/tituloBasais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#424242"
            android:textSize="18sp" />

    </LinearLayout> <!-- TITULO -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.github.florent37.materialtextfield.MaterialTextField
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:mtf_image="@drawable/icon_fc">

                    <EditText
                        android:id="@+id/edTextFC0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="FC"
                        android:inputType="number"
                        android:textColor="#333"
                        android:textColorHint="#666"
                        android:textSize="15sp" />

                </com.github.florent37.materialtextfield.MaterialTextField> <!--FC -->

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <com.github.florent37.materialtextfield.MaterialTextField
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:mtf_image="@drawable/icon_pa">

                    <EditText
                        android:id="@+id/editTextPA0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="PA"
                        android:inputType="date|number"
                        android:textColor="#333"
                        android:textColorHint="#666"
                        android:textSize="15sp" />

                </com.github.florent37.materialtextfield.MaterialTextField> <!--PA-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.github.florent37.materialtextfield.MaterialTextField
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:mtf_image="@drawable/icon_sangue">

                    <EditText
                        android:id="@+id/edTextGC0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="GC"
                        android:inputType="number"
                        android:textColor="#333"
                        android:textColorHint="#666"
                        android:textSize="15sp" />

                </com.github.florent37.materialtextfield.MaterialTextField> <!--GC-->

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <com.github.florent37.materialtextfield.MaterialTextField
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:mtf_image="@drawable/icon_spo2">

                    <EditText
                        android:id="@+id/edTextSp0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="SpO2"
                        android:inputType="number"
                        android:textColor="#333"
                        android:textColorHint="#666"
                        android:textSize="15sp" />

                </com.github.florent37.materialtextfield.MaterialTextField> <!--SPO2-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.github.florent37.materialtextfield.MaterialTextField
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:mtf_image="@drawable/icon_o2">

                    <EditText
                        android:id="@+id/edTextO2Supl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/o2_supl"
                        android:inputType="number"
                        android:textColor="#333"
                        android:textColorHint="#666"
                        android:textSize="15sp" />

                </com.github.florent37.materialtextfield.MaterialTextField> <!--O2 supl-->

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <com.github.florent37.materialtextfield.MaterialTextField
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:mtf_image="@drawable/icon_pulmao">

                    <EditText
                        android:id="@+id/edTextDisp0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/dispneia"
                        android:inputType="number"
                        android:textColor="#333"
                        android:textColorHint="#666"
                        android:textSize="15sp" />

                </com.github.florent37.materialtextfield.MaterialTextField> <!--Dispneia-->

            </LinearLayout>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:mtf_image="@drawable/icon_mmii">

                <EditText
                    android:id="@+id/edTextFad0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fadiga dos Membros Inferiores"
                    android:inputType="number"
                    android:textColor="#333"
                    android:textColorHint="#666"
                    android:textSize="15sp" />

            </com.github.florent37.materialtextfield.MaterialTextField> <!--FAD MMII-->

            <Button
                android:id="@+id/btComecarTeste"
                android:layout_width="180dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="@string/comecar_teste"
                android:textColor="#d7ffffff"
                android:background="@color/colorAccent" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
