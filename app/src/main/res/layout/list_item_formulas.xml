<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="5dp">

        <ImageView
            android:id="@+id/icon_pais_formula"
            android:layout_width="40dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:padding="10dp"
            android:src="@drawable/bandeira_brasil"

            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_autores_formula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Britto e cols., 2013"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/text_coeficiente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="rÂ² = 0.46"
                    android:textColor="#9e9e9e"
                    android:textSize="12sp" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="2dp"
                android:background="#9e9e9e" />

            <TextView
                android:id="@+id/text_formula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="299.296 - (2.728 * idade) - (2.16 * massa) + (361.731 * estatura) + (56.386 * genero)"
                android:textColor="#3b734e"
                android:textSize="12sp" />


        </LinearLayout>

        <Switch


            android:id="@+id/switch_formula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp" />
    </LinearLayout>
</LinearLayout>